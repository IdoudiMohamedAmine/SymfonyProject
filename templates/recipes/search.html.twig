{# templates/recipes/search.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Search Recipes</h1>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-group">
            {{ form_label(form.ingredients) }}
            {{ form_widget(form.ingredients, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.search, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}

        {% if recipes is defined %}
            <h2 class="my-4">Search Results</h2>

            {% for recipe in recipes %}
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">{{ recipe.name }}</h2>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info" role="alert">
                    No recipes found.
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}